{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@trivago/prettier-plugin-sort-imports"
	],
	"importOrder": [
		"^\\$app/(.*)$",
		"^\\$lib/components/ui/(.*)$",
		"^\\$lib/(.*)$",
		"^[./]",
		"^@sveltejs/(.*)$",
		"^svelte/(.*)$",
		"^svelte$"
	],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
